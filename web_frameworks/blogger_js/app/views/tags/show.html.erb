<h1>Articles tagged with <%= @tag.name %></h1>
<ul>
  <% @tag.articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to 'All Tags', tags_path %>

<% if logged_in? %>
  <%= link_to 'Edit Tag', edit_tag_path(@tag) %>
  <%= link_to 'Remove', 
    tag_path(@tag), 
    method: :DELETE, 
    data: {confirm: "Are you sure you want to remove this tag?"} %>
<% end %>