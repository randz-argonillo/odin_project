

<%= form_for(@article) do |f| %>
  <% if @article.errors.count > 0 %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

  <p>
    <%= f.label :title %>  <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>  <br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %> <br>
    <%= f.text_field :tag_list %> <br>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>